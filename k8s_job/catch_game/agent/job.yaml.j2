apiVersion: batch/v1
kind: Job
metadata:
  name: agents
spec:
  parallelism: {{ replicas }}
  completions: {{ replicas }}
  completionMode: Indexed
  template:
    metadata:
      labels:
        task: simulation
    spec:
      subdomain: mysvc
      volumes:
      - name: script-volume
        configMap:
          name: agent-script
      containers:
      - name: main
        image: python:3.10.10-bullseye
        command: ["bash"]
        args:
        - -c
        - |
          pip install numpy grpcio dm-env dm-env-rpc
          python /script-path/catch_ai_agent.py environments-$JOB_COMPLETION_INDEX.mysvc:12345
        imagePullPolicy: IfNotPresent
        volumeMounts:
          - mountPath: /script-path
            name: script-volume
      restartPolicy: Never
  backoffLimit: 6
