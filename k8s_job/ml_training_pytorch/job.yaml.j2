apiVersion: batch/v1
kind: Job
metadata:
  name: myjob
spec:
  parallelism: {{ hosts_count }}
  completions: {{ hosts_count }}
  completionMode: Indexed
  template:
    spec:
      subdomain: mysvc
      volumes:
      - name: script-volume
        configMap:
          name: script
      tolerations:
      - key: "nvidia.com/gpu"
        operator: "Exists"
        effect: NoSchedule
      containers:
      - name: main
        image: gcr.io/deeplearning-platform-release/pytorch-gpu.1-12
        command: ["bash"]
        args:
        - -c
        - |
          torchrun --node_rank $JOB_COMPLETION_INDEX --nnodes {{ hosts_count }} --nproc_per_node {{ local_device_count }} --master_addr myjob-0.mysvc --master_port 8080 /script-path/main.py
        ports:
        - containerPort: 8080
        imagePullPolicy: IfNotPresent
        resources:
          limits:
            nvidia.com/gpu: {{ local_device_count }}
        volumeMounts:
          - mountPath: /script-path
            name: script-volume
      restartPolicy: Never
  backoffLimit: 0
